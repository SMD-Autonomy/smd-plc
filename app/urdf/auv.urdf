<robot name="eight_pan_tilt_arm">
  <!-- Each pan-tilt pair -->
  <link name="base"/>

  <!-- Actuator 0 -->
  <link name="link_0_tilt"/>
  <joint name="joint_0_tilt" type="revolute">
    <parent link="base"/>
    <child link="link_0_tilt"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="link_0_pan"/>
  <joint name="joint_0_pan" type="revolute">
    <parent link="link_0_tilt"/>
    <child link="link_0_pan"/>
